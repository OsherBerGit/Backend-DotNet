                @* <li><a href="/swagger" class="nav-link">API Docs</a></li> *@
            </ul>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <footer class="footer">
        <p>&copy; 2025 MyBackend - All Rights Reserved</p>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

