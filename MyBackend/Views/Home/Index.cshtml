@{
    ViewData["Title"] = "Home";
}

<div class="hero">
    <h1>Welcome to MyBackend</h1>
    <p>A complete ASP.NET Core backend with Products, Users, and Purchase management</p>
</div>

<div class="cards-grid">
    <div class="card">
        <h2>📦 Products</h2>
        <p>Manage your product inventory, including names, descriptions, prices, and quantities.</p>
        <a href="/Home/Products">View Products</a>
    </div>

    <div class="card">
        <h2>👥 Users</h2>
        <p>Manage user accounts with role-based access control and authentication.</p>
        <a href="/Home/Users">View Users</a>
    </div>

    <div class="card">
        <h2>🛒 Purchases</h2>
        <p>Track customer purchases with automatic inventory management and order history.</p>
        <a href="/Home/Purchases">View Purchases</a>
    </div>
</div>

<div class="table-container mt-2">
    <h2>Features</h2>
    <ul style="list-style-position: inside; color: var(--text-secondary);">
        <li>✅ RESTful API with full CRUD operations</li>
        <li>✅ Entity Framework Core with PostgreSQL</li>
        <li>✅ JWT Authentication & Authorization</li>
        <li>✅ Automatic inventory management on purchases</li>
        <li>✅ Role-based access control</li>
        <li>✅ Clean architecture with DTOs and mappers</li>
        <li>✅ Swagger API documentation (available at <a href="/swagger">/swagger</a>)</li>
    </ul>
</div>

@section Scripts {
    <script>
        console.log('MyBackend - Home Page Loaded');
        // Swagger UI is still available at /swagger endpoint
    </script>
}

